bindsym $mod+Shift+b exec --no-startup-id subl3

# web browser 
bindsym $mod+w exec --no-startup-id $BROWSER

# discord
bindsym $mod+Shift+w exec --no-startup-id discord

# start dmenu (a program launcher)
